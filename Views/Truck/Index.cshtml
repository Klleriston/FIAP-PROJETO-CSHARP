@model IEnumerable<FIAP_PROJETO_CSHARP.Models.Truck>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Caminhões - FIAP_PROJETO_CSHARP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FIAP_PROJETO_CSHARP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Truck" asp-action="Index">Lista de Caminhões</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Truck" asp-action="Create">Criar Novo Caminhão</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-secondary" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h2>Lista de Caminhões</h2>

        <p>
            <a asp-action="Create" class="btn btn-primary">Criar Novo Caminhão</a>
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Código da Placa</th>
                    <th>Motorista</th>
                    <th>Data de Registro</th>
                    <th>Localização</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var truck in Model)
                {
                    <tr>
                        <td>@truck.Id</td>
                        <td>@truck.PlateCode</td>
                        <td>@truck.Driver</td>
                        <td>@truck.RegistrationDate.ToString("dd/MM/yyyy")</td>
                        <td>@truck.Location</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@truck.Id" class="btn btn-info btn-sm">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@truck.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@truck.Id" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
